&НаСервере
Процедура КомандаПолучитьQRКод()
	
	Обработка = ОбработкаОбъект();
	Ответ     = Обработка.ПолучитьQRКод();
	
	ВывестиЛог("Получение QR-кода", Ответ); 
	Консоль   = СтруктураВJSONСтроку(Ответ);

	Если Ответ.type = "qrCode" Тогда
		Элементы.QRКод.Видимость = Истина;
		Элементы.ГруппаQRКодГлавный.Видимость = Истина;
		
		ТекстМакета = Обработка.ПолучитьМакет("QRМакет").ТекущаяОбласть.Текст;
		QRКод = СтрЗаменить(ТекстМакета, "%QR_DATA%", Ответ.message);
		
	ИначеЕсли Ответ.type = "already_registered" Тогда
		
		Элементы.QRКод.Видимость = Ложь;
		Элементы.ГруппаQRКодГлавный.Видимость = Ложь;
		QRКод = "";
		
	Иначе
		Элементы.QRКод.Видимость = Ложь;
		Элементы.ГруппаQRКодГлавный.Видимость = Ложь;
		QRКод = "";
	КонецЕсли;
	
	ОбновитьСтатусСервиса();
	
КонецПроцедуры

&НаКлиенте
Процедура ЗапуститьФоновуюПроверку()
	
	СчетчикТаймера = 0;
	
	Если Элементы.ГруппаQRКодГлавный.Видимость Тогда
		ПодключитьОбработчикОжидания("ЕдиныйЦиклПроверкиАвторизации", 3);
	КонецЕсли;
	
КонецПроцедуры

&НаКлиенте
Процедура ЕдиныйЦиклПроверкиАвторизации()
	
	ТекущийСтатус = ПолучитьСтатусИнстансаТихо();
	
	Если ТекущийСтатус = "authorized" Тогда
		
		ОтключитьОбработчикОжидания("ЕдиныйЦиклПроверкиАвторизации");
		ОбновитьСтатусСервиса();
		ПоказатьОповещениеПользователя("Успех!", , "Авторизация выполнена");
		Возврат; 
		
	ИначеЕсли ТекущийСтатус = "starting" Тогда
		
		ОбновитьСтатусСервиса();
		Возврат;
		
	КонецЕсли;

	Если ТипЗнч(СчетчикТаймера) <> Тип("Число") Тогда
		СчетчикТаймера = 0;
	КонецЕсли;

	СчетчикТаймера = СчетчикТаймера + 1;
	
	Если СчетчикТаймера >= 5 Тогда
		
		КомандаПолучитьQRКод();
		СчетчикТаймера = 0;
		
		Если НЕ Элементы.ГруппаQRКодГлавный.Видимость Тогда
			ОтключитьОбработчикОжидания("ЕдиныйЦиклПроверкиАвторизации");
		КонецЕсли;
		
	КонецЕсли;

КонецПроцедуры

