Процедура ВывестиЛог(Заголовок, Данные)
	
	Если Данные = Неопределено Тогда
		Сообщить(Строка(Заголовок) + ": Нет ответа (Неопределено)");
		Возврат;
	КонецЕсли;

	
	Если ТипЗнч(Данные) = Тип("Структура") Тогда
		
		Если Данные.Свойство("statusCode") Тогда
			Код = Данные.statusCode;
			Если Код = 200 Тогда
				ТекстЛога = Строка(Заголовок) + " | 200 успешно";
			Иначе
				ТекстЛога = Строка(Заголовок) + " | " + Код + " ошибка";
			КонецЕсли;
		Иначе
			ТекстЛога = Строка(Заголовок) + " | Успешно";
		КонецЕсли;
		
		
		Если Данные.Свойство("idMessage") Тогда
			ТекстЛога = Строка(Заголовок) + " | Успешно (id: " + Данные.idMessage + ")";
		КонецЕсли;
		
		Если Данные.Свойство("errorMessage") Тогда
			ТекстЛога = Строка(Заголовок) + " (" + Данные.errorMessage + ")";
		КонецЕсли;


	ИначеЕсли ТипЗнч(Данные) = Тип("Массив") Тогда
		ТекстЛога = Строка(Заголовок) + " | Успешно (" + Данные.Количество() + " шт.)";
		
	Иначе
		ТекстЛога = Строка(Заголовок) + " | " + Строка(Данные);
	КонецЕсли;
	
	Сообщить(ТекстЛога);
	
